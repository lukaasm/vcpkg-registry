{
  "name": "shader-slang-rhi",
  "version": "0",
  "description": "The slang-rhi library provides a render hardware interface for the Slang shading language.",
  "homepage": "https://github.com/shader-slang/slang-rhi",
  "license": "Apache-2.0 WITH LLVM-exception",
  "dependencies": [
    "shader-slang",
    {
      "name": "vcpkg-cmake",
      "host": true
    },
    {
      "name": "vcpkg-cmake-config",
      "host": true
    }
  ],
  "features": {
    "d3d11": {
      "description": "Enable D3D11 backend",
      "supports": "windows"
    },
    "d3d12": {
      "description": "Enable D3D12 backend",
      "supports": "windows"
    },
    "vulkan": {
      "description": "Enable Vulkan backend",
      "dependencies": [
        "vulkan-headers"
      ]
    }
  }
}
